<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:focusableInTouchMode="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cyr.chatogo.Activities.SettingsActivity"
    >

    <ImageView
        android:id="@+id/settings_image"
        android:layout_width="@dimen/settings_image"
        android:layout_height="@dimen/settings_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/contacts"
        android:onClick="onImageClick"/>
    <TextView
        android:id="@+id/settings_username"
        android:hint="@string/prompt_username"
        android:textSize="@dimen/medium_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_image"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textStyle="normal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/settings_username"
        android:orientation="horizontal">
        <TextView
            android:text="Location:"
            android:textSize="@dimen/normal_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            />
        <EditText
            android:id="@+id/settings_location"
            android:hint="@string/location_hint"
            android:textSize="@dimen/normal_font"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:textStyle="normal"
            android:background="@drawable/underline"
            />
        <Button
            android:id="@+id/settings_change"
            android:text="Change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="center"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:onClick="onLocationChange"
            />
    </LinearLayout>
    <Button
        android:id="@+id/remove_user"
        android:text="Remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:focusableInTouchMode="false"
        android:enabled="false"
        style="@style/Widget.AppCompat.Button.Colored"
        />
</RelativeLayout>
